!!! html
%html{ :lang => "en" }
  %head
    %title Loanr
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            = link_to "Loanr", root_path, :class => "brand"
    .row
      .container
        - flash.each do |key, value|
          %div{:class => "#{key}"}
            = value
    .row
      .container
        = yield


